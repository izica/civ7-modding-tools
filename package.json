    "keywords": ["typescript", "civilization", "modding", "tools"],
    "dependencies": {
        "@types/jstoxml": "^5.0.0",
        "@types/lodash": "^4.17.15",
        "@types/node": "^22.13.5",
        "jstoxml": "^5.0.2",
        "lodash": "^4.17.21",
        "tsup": "^8.4.0",
        "tsx": "^4.19.3",
        "typescript": "5.7.3"
